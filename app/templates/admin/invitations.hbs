<h1>Invitations</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>E-mail</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |invitation|}}
    <tr>
      <th>{{invitation.id}}</th>
      <td>{{invitation.email}}</td>
      <td><a href="#">
          <span class="glyphicon glyphicon-trash" aria-hidden="true" {{action 'deleteInvitation' invitation}}></span>
      </a></td>
    </tr>
    {{/each}}
  </tbody>
</table>